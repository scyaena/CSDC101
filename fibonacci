#include <iostream>
using namespace std;

int main()
{
    int n,t1 = 0, t2 = 1, nextterm = 0;
    
    cout << "Enter the number of terms: ";
    cin >> n;
    
    cout << "Fibonacci Series: ";
    
    for (int i = 1; i <=n; ++i){
        if (i == 1){
            cout << t1 << ", ";
            continue;
        }
        if (i == 2){
            cout << t2 << ", ";
            continue;
        }
        nextterm = t1 + t2;
        t1 = t2;
        t2 = nextterm;
        
        cout << nextterm << ", ";
    }
    
    return 0;
}


#include <iostream>
using namespace std;

int main(){
    
    int a = 1, b = 1, c, n, i = 2;
    
    cout << "Enter the number of terms: ";
    cin >> n;
    
    cout << a << " " << b << " ";
    
    for (int i = 2; i < n; i++){
        c = a + b;
            cout << c << " ";
        a = b, b = c;
    }
    
    return 0;
}
