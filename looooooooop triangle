#include <iostream>
using namespace std;

int main()
{
  for(int row = 10; row >= 0; row--){
     cout<<"*"<<"";
     

  for(int column = 1; column <= row; column++){
      cout<<"*";
  }
  cout<<endl;
  }
    
    return 0;
}


#include <iostream>
using namespace std;

int main()
{
  for(int row = 0; row <= 10; row++){
     cout<<"*"<<"";
     

  for(int column = 1; column <= row; column++){
      cout<<"*";
  }
  cout<<endl;
  }
    
    return 0;
}



#include <iostream>
using namespace std;

int main()
{
  for(int row1 = 0; row1 <= 10; row1++){
     cout<<"*"<<"";
     

  for(int column1 = 1; column1 <= row1; column1++){
      
      cout<<"*";
  }
   
    cout<<endl;
  }
  
    for(int row2 = 10; row2 >= 0; row2--){
     cout<<"*"<<"";
     

  for(int column2 = 1; column2 <= row2; column2++){
      
      cout<<"*";
  }
   
    cout<<endl;
  }
  
    
    return 0;
}
