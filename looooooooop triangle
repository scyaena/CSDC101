#include <iostream>
using namespace std;

int main()
{
  for(int row = 10; row >= 0; row--){
     cout<<"*"<<"";
     

  for(int column = 1; column <= row; column++){
      cout<<"*";
  }
  cout<<endl;
  }
    
    return 0;
}


#include <iostream>
using namespace std;

int main()
{
  for(int row = 0; row <= 10; row++){
     cout<<"*"<<"";
     

  for(int column = 1; column <= row; column++){
      cout<<"*";
  }
  cout<<endl;
  }
    
    return 0;
}
